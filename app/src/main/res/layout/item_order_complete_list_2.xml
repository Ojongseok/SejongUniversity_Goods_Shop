<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_item_cart_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout6">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_order_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="text"
        android:textColor="@color/main_text"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_item_cart_cardview"
        app:layout_constraintTop_toTopOf="@+id/iv_item_cart_cardview" />

    <TextView
        android:id="@+id/tv_pd_seller_map2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="ㅣ"
        android:textColor="@color/main_text"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_order_complete_title"
        app:layout_constraintStart_toEndOf="@+id/tv_item_order_complete_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_order_complete_title" />

    <TextView
        android:id="@+id/tv_item_order_complete_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Tex"
        android:textColor="@color/main_text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_order_complete_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_order_complete_title" />

    <TextView
        android:id="@+id/tv_item_order_complete_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="업체명"
        android:textColor="#D6983B"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pd_seller_map2"
        app:layout_constraintStart_toEndOf="@+id/tv_pd_seller_map2"
        app:layout_constraintTop_toTopOf="@+id/tv_pd_seller_map2" />

    <TextView
        android:id="@+id/tv_item_order_complete_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/main_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_cart_cardview"
        app:layout_constraintStart_toStartOf="@+id/tv_item_order_complete_title" />

    <TextView
        android:id="@+id/tv_item_order_complete_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="TextView"
        android:textColor="@color/sub_text"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_order_complete_price"
        app:layout_constraintStart_toStartOf="@+id/tv_item_order_complete_title" />

    <TextView
        android:id="@+id/tv_item_order_complete_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/main_red"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_order_complete_title" />
</androidx.constraintlayout.widget.ConstraintLayout>